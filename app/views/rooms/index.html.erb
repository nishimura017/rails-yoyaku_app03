<h1>Rooms#index</h1>
<p>Find me in app/views/rooms/index.html.erb</p>
<h3>登録済み一覧</h3>
 
 <table>
   <thead>
     <tr>
       <th>画像</th>
       <th>施設名</th>
       <th>紹介文</th>
       <th>料金</th>
       <th>作成日</th>
     </tr>
   </thead>
 
   <tbody>
     <% @rooms.each do |room| %>
       <tr>
       <td><%= image_tag $user.image.thumb.url %></td>
       
         <td><%= room.roomname %></td>
         <td><%= room.introduction%></td>
         <td><%= room.price %></td>
         <td><%= room.created_at.to_s(:datetime_jp) %></td>
       </tr>
     <% end %>
   </tbody>
 </table>
 
 <p><%= link_to "施設新規登録", :new_room %></p>